<% layout('./layouts/boilerplate.ejs') %>
<div
  class="
    d-flex
    justify-content-center
    align-items-center
    pt-3
    pb-2
    mb-3
    border-bottom
  "
>
  <h1 class="h1 text-nowrap">Add Student</h1>
</div>
<div class="row">
  <div class="col-6 offset-3">
    <form class="validated" action="/student" method="POST" novalidate>
      <div class="mb-3 col-sm-8 offset-sm-2">
        <label class="form-label" for="id">Student ID</label>
        <input
          class="form-control"
          type="text"
          id="id"
          name="student[studentId]"
          required
        />
      </div>
      <div class="mb-3 col-sm-8 offset-sm-2">
        <label class="form-label" for="fName">First Name</label>
        <input
          class="form-control"
          type="text"
          id="fName"
          name="student[firstName]"
          required
        />
      </div>
      <br />
      <div class="mb-3 col-sm-8 offset-sm-2">
        <label class="form-label" for="lName">Last Name</label>
        <input
          class="form-control"
          type="text"
          id="lName"
          name="student[lastName]"
          required
        />
      </div>
      <br />
      <div class="col-sm-8 offset-sm-2">
        <button class="btn btn-primary" type="submit">Add</button>
      </div>
    </form>
  </div>
</div>

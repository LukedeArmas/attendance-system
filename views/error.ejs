<% layout('./layouts/boilerplate.ejs') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="alert alert-secondary" role="alert">
      <h4 class="alert-heading text-break"><%= err.message %></h4>
      <!-- If we are in production mode we do not display the error stack to the user -->
      <% if(process.env.NODE_ENV !== "production") { %>
      <p class="text-break"><%= err.stack %></p>
      <% } %>
      <hr />
    </div>
  </div>
</div>

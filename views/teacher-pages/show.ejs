<% layout('./layouts/boilerplate.ejs') %> 

<% let buttons = [ 
  { 
    text: 'Update Password', 
    colorClass: 'btn-outline-secondary', 
    link: `/teacher/${teacher.id}/updatePassword` 
  }, 
  { 
    text: 'Edit', 
    colorClass: 'btn-outline-secondary', 
    link: `/teacher/${teacher.id}/edit` 
  } 
] %> 

<%- include('../partials/headers/show-header.ejs', { 
  deleteButton: true, 
  deleteRequest: `/teacher/${teacher.id}/?_method=DELETE`, 
  buttons, 
  headerText: teacher.fullName 
}) %>
<%- include('../partials/info-display.ejs', { 
  displayArray: [
    { key: 'Username:', value: teacher.username }, 
    { key: 'Email:', value: teacher.email }
  ] 
}) %>
<%- include('../partials/headers/sub-header.ejs', { 
  subHeaderText: 'Classes:', 
  searchType: 'Class', 
  search: true 
}) %> 
<%- include('../partials/tables/class-table.ejs', { 
  classes, 
  num: 1, 
  teacherShow: true, 
  clientPagination: true 
}) %> 
<% if (count > 0) { %> 
  <%- include('../partials/pagination.ejs', { 
    url, 
    page: 1, 
    pageLimit: 5, 
    count, 
    clientPagination: true 
  }) %> 
<% } %>

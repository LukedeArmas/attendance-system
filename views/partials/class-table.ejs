<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col" class="px-0"></th>
      <th scope="col">Class Code</th>
      <th scope="col">Class Name</th>
      <th scope="col">Subject</th>
      <th scope="col">Teacher</th>
      <th scope="col" class="text-center">Options</th>
    </tr>
  </thead>
  <tbody class="table">
    <% for (let singleClass of classes) { %>
    <tr>
      <th scope="row" class="text-center"><%= num %>.</th>
      <td><%= singleClass.classCode %></td>
      <td><%= singleClass.className %></td>
      <td><%= singleClass.subject %></td>
      <td><%= singleClass.teacher %></td>
      <td class="text-center">
        <a
          class="btn btn-outline-secondary px-3 py-1"
          href="/class/<%= singleClass._id %>"
          ><i class="fas fa-school"></i
        ></a>
      </td>
    </tr>
    <% num++ } %>
  </tbody>
</table>

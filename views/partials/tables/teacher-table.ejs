<div class="table-responsive">
  <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col" class="px-0"></th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th class="text-center" scope="col">View</th>                                
        </tr>
      </thead>
      <% if (teachers.length) { %>
      <tbody>
        <% 
        for (let teacher of teachers) { %>
        <tr>
          <th scope="row" class="text-center ps-0"><%= num %>.</th>
          <td class="firstName"><%= teacher.firstName %></th>
          <td class="lastName"><%= teacher.lastName %></th>
          <td class="userName"><%= teacher.username %></td>
          <td class="email"><%= teacher.email %></td>
          <td class="text-center">
            <a class="btn btn-outline-secondary px-3 py-1" href="/teacher/<%= teacher._id %>"
              ><i class="fa fa-user"></i></a
            >
          </td>                                    
        </tr>
        <% num++ 
      } %>
      </tbody>
      <% } %>
    </table>
  </div>
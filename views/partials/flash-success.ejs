<% if(message && message.length) { %>
<div
  class="alert alert-primary alert-dismissible fade show <% if (typeof login !== 'undefined') { %> col-sm-6 offset-sm-3 col-lg-4 offset-lg-4 <% } %>"
  role="alert"
>
  <%= message %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
